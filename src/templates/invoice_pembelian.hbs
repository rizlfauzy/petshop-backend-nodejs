<html lang="en">

  <head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <style>
      * { font-family: 'Gill Sans', 'Gill Sans MT', Calibri, 'Trebuchet MS', sans-serif; /* font-family: Arial, Helvetica, sans-serif; */ /* font-family: 'Courier New', Courier, monospace; */ /* font-weight: bold; */ } @page { margin-top:
      25px; } .cf:before, .cf:after { content: " "; /* 1 */ display: table; /* 2 */ } .cf:after { clear: both; } /** * For IE 6/7 only * Include this rule to trigger hasLayout and contain floats. */ table { /* font-family: Verdana, Arial,
      Helvetica, sans-serif; */ border-collapse: collapse; width: 100%; } th { border: 1px solid #333; text-align: left; padding: 3px; } div { font-size: 12; /* border: 1px solid #408080; */ }
    </style>
    <title>PDF</title>
  </head>

  <body>
    <div class="row cf">
      <div class="col-sm-4" style="float: right; font-size: 8px;">
        WAKTU CETAK :
        {{order.waktu_cetak}}
      </div>
    </div>
    <div class="row cf">
      <div class="col" style="width: 100%; float: left; text-align: left;">
        <div style="font-size: 12px;">
          <h3>LAPORAN PENERIMAAN BARANG</h3>
        </div>
      </div>
    </div>
    <div class="row cf" style="margin-bottom: 2px;">
      <div class="col cf" style="float: left; width: 50%; text-align: left;">
        <div style="font-size: 8px; float: left;">
          NO. PB :
          {{order.nomor}}
        </div>
      </div>
    </div>
    <div class="row cf" style="margin-bottom: 2px;">
      <div class="col cf" style="float: left; width: 50%; text-align: left;">
        <div style="font-size: 8px; float: left;">
          TANGGAL :
          {{order.tanggal}}
        </div>
      </div>
    </div>

    <table cellpadding="4" cellspacing="0">
      <thead>
        <tr>
          <th style="text-align: center; font-size: 9px;">No</th>
          <th style="text-align: center; font-size: 9px;">Nama Produk</th>
          <th style="text-align: center; font-size: 9px;">Qty</th>
          <th style="text-align: center; font-size: 9px;">Harga</th>
          <th style="text-align: center; font-size: 9px;">Jumlah</th>
        </tr>
      </thead>
      <tbody>
        {{#each order.list_barang}}
          <tr>
            <td style="text-align: center; font-size: 8px;">{{this.no}}</td>
            <td style="text-align: left; font-size: 8px;">{{this.nama_barang}}</td>
            <td style="text-align: center; font-size: 8px;">{{this.qty}}</td>
            <td style="text-align: right; font-size: 8px;">{{this.harga}}</td>
            <td style="text-align: right; font-size: 8px;">{{this.total}}</td>
          </tr>
        {{/each}}
      </tbody>
    </table>
    <hr>
    <div class="row cf">
      <div class="col-sm-8" style="float: right; width: 20%; font-size: 9px;">
        <b style="float: left;">Total : </b>
        <b style="float: right;">{{order.grand_total}}</b>
      </div>
    </div>
    <div class="row cf">
      <div class="col cf" style="float: left; width: 30%;">
        <div style="font-size: 9px;">
          Diterima,
        </div>
      </div>
      <div class="col cf" style="float: left; width: 30%;">
        <div style="font-size: 9px;">
          Mengetahui,
        </div>
      </div>
      <div class="col cf" style="float: left; width: 30%;">
        <div style="font-size: 9px;">
          Hormat Kami,
        </div>
      </div>
    </div>
  </body>

</html>